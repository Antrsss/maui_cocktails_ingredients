<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Zgirskaya_353502.UI.ViewModels"
             x:DataType="viewModels:AddIngredientViewModel"
             x:Class="Zgirskaya_353502.UI.Pages.AddIngredientPage"
             Title="Добавить ингредиент">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="15">
                <!-- Поле для названия ингредиента -->
                <Label Text="Название ингредиента:"/>
                <Entry Text="{Binding IngredientName}" 
                       Placeholder="Введите название"/>

                <!-- Поле для количества -->
                <Label Text="Количество:"/>
                <Entry Text="{Binding Quantity}" 
                       Placeholder="Введите количество"
                       Keyboard="Numeric"/>

                <!-- Поле для цены -->
                <Label Text="Цена:"/>
                <Entry Text="{Binding Price}" 
                       Placeholder="Введите цену"
                       Keyboard="Numeric"/>

                <!-- Кнопка сохранить -->
                <Button Text="Сохранить" 
                        Command="{Binding SaveCommand}"
                        HorizontalOptions="Center"
                        WidthRequest="200"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>