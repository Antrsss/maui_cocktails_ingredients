<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:Zgirskaya_353502.UI.ViewModels"
             x:DataType="viewModels:IngredientsViewModel"
             x:Class="Zgirskaya_353502.UI.Pages.IngredientsPage"
             Title="IngredientsPage">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior 
            EventName="Appearing" 
            Command="{Binding GetIngredientByIdCommand}" />
    </ContentPage.Behaviors>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit" Command="{Binding EditIngredientCommand}" />
        <ToolbarItem Text="Delete" Command="{Binding DeleteIngredientCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <VerticalStackLayout Spacing="10" Padding="20">
            <Frame Padding="20" BackgroundColor="WhiteSmoke">
                <VerticalStackLayout Spacing="10">
                    <!-- Предполагая, что IngredientData содержит Name -->
                    <Label Text="{Binding IngredientData.Name}" 
                           FontSize="18"
                           FontAttributes="Bold"/>

                    <Label Text="{Binding StorageOnHand, StringFormat='In stock: {0}'}"
                           FontSize="16"/>

                    <!-- Добавьте другие свойства IngredientData по необходимости -->
                    <!-- Например: -->
                    <!-- <Label Text="{Binding IngredientData.Description}" /> -->
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>