<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:Zgirskaya_353502.UI.ViewModels"
             x:DataType="viewModels:AddOrEditIngredientViewModel"
             x:Class="Zgirskaya_353502.UI.Pages.AddOrEditIngredientPage"
             Title="AddOrEditIngredientPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{Binding AddOrEditIngredientCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <VerticalStackLayout>
            <Frame Margin="10" Padding="5">
                <VerticalStackLayout>
                    <Label Text="Name" />
                    <Entry Placeholder="Name" Text="{Binding Path='IngredientData.Name'}" />
                    <Label Text="Price" />
                    <Entry Placeholder="Price" Text="{Binding Path='IngredientData.Price'}" />
                    <Label Text="{Binding Path='StorageOnHand', StringFormat='StorageOnHand: {0}'}" />
                    <Stepper
                        x:Name="Stepper"
                        Minimum="0"
                        Maximum="1000"
                        Value="{Binding Path='StorageOnHand'}">
                        <Stepper.Behaviors>
                            <toolkit:EventToCommandBehavior
                                EventName="ValueChanged"
                                Command="{Binding UpdateStorageOnHandCommand}"
                                CommandParameter="{Binding Source={x:Reference Stepper}, Path=Value}" />
                        </Stepper.Behaviors>
                    </Stepper>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>