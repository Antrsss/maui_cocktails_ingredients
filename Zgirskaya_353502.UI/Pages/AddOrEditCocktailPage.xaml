<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zgirskaya_353502.UI.Pages.AddOrEditCocktailPage"
             Title="AddOrEditCocktailPage">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{Binding AddOrEditCocktailCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <VerticalStackLayout>
            <Frame Margin="10" Padding="5">
                <VerticalStackLayout>
                    <Label Text="Name" />
                    <Entry Placeholder="Name" Text="{Binding Path='Name'}" />
                    <Label Text="Preparation time" />
                    <Entry Placeholder="Preparation time" Text="{Binding Path='PreparationTime'}" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>